{
  "name": "HFT Freelance Platform",
  "description": "A decentralized freelance platform built on blockchain technology with HFT token integration",
  "icon": "/logoForWeb.png",
  "url": "https://crypto-lance-gamma.vercel.app/",
  "version": "1.0.0",
  "baseBuilder": {
    "allowedAddresses": ["0x30217A8C17EF5571639948D118D086c73f823058"]
  },
  "permissions": ["cast", "reactions", "user_data_basic", "user_data_profile"],
  "features": [
    "freelance_jobs",
    "bidding_system",
    "portfolio_management",
    "escrow_payments",
    "hft_token_integration"
  ],
  "app": {
    "type": "web",
    "platform": "web",
    "supported_networks": ["ethereum", "polygon", "arbitrum"],
    "blockchain_features": [
      "smart_contracts",
      "token_transfers",
      "escrow_management",
      "proposal_system"
    ]
  },
  "metadata": {
    "tags": ["freelance", "blockchain", "defi", "web3", "hft"],
    "category": "productivity",
    "audience": "freelancers_and_clients"
  },
  "integration": {
    "farcaster": {
      "cast_actions": [
        {
          "name": "Share Job",
          "description": "Share a freelance job posting on Farcaster",
          "action": "share_job"
        },
        {
          "name": "Share Portfolio",
          "description": "Share your portfolio on Farcaster",
          "action": "share_portfolio"
        }
      ],
      "frame_actions": [
        {
          "name": "View Job",
          "description": "View job details in a Farcaster frame",
          "action": "view_job"
        },
        {
          "name": "Apply to Job",
          "description": "Apply to a job directly from Farcaster",
          "action": "apply_job"
        }
      ]
    }
  },
  "contact": {
    "support": "support@crypto-lance-gamma.vercel.app",
    "website": "https://crypto-lance-gamma.vercel.app/",
    "twitter": "@your_handle"
  }
}
